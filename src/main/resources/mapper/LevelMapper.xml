<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyx.mapper.LevelMapper">
  <resultMap id="leveldto" type="com.zyx.dto.LevelDto">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="step" jdbcType="VARCHAR" property="step" />
    <result column="score" jdbcType="INTEGER" property="score" />
    <result column="max_score" jdbcType="INTEGER" property="maxScore" />
    <result column="min_score" jdbcType="INTEGER" property="minScore" />
  </resultMap>

  <select id="queryLevel" parameterType="com.zyx.model.Level" resultMap="leveldto">
    SELECT  id,name,step,score,min_score,max_score from level WHERE  del=0
    <if test="appType!=null">
      and app_type=#{appType}
    </if>
    ORDER by create_time desc
  </select>

  <update id="delLevel" parameterType="java.lang.Integer">
    UPDATE level set del=1 where id=#{id}
  </update>

  <update id="updateLevel" parameterType="com.zyx.model.Level">
    UPDATE level
    <set>
    <if test="name != null and name != ''">
      name = #{name},
    </if>
    </set>
    WHERE  id=#{id}
  </update>

  <select id="querySteps" parameterType="java.lang.Integer" resultType="java.lang.String">
      SELECT step from level where app_type=#{appType} and del =0
  </select>
</mapper>